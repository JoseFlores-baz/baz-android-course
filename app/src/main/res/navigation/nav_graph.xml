<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/allCryptosFragment">

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.bazandroidcourse.ui.fragments.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="book_id"
            app:argType="string"/>
        <action
            android:id="@+id/action_detail_to_allCryptos"
            app:destination="@id/allCryptosFragment" />
    </fragment>
    <fragment
        android:id="@+id/allCryptosFragment"
        android:name="com.example.bazandroidcourse.ui.fragments.AllCryptosFragment"
        android:label="fragment_all_criptos"
        tools:layout="@layout/fragment_all_cryptos" >

        <action
            android:id="@+id/action_allCryptos_to_detail"
            app:destination="@id/detailFragment">
        <argument
            android:name="book_id"
            app:argType="string"/>
        </action>

    </fragment>
</navigation>