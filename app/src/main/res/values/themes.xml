    <style name="title" parent="Theme.BazAndroidCourse">
        <item name="android:textSize">@dimen/font_title</item>
        <item name="marginHorizontal">@dimen/general_horizontal_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/general_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/general_vertical_margin</item>

    </style>

    <style name="sub_title" parent="Theme.BazAndroidCourse">
        <item name="android:textSize">@dimen/font_subtilte</item>
        <item name="marginHorizontal">@dimen/general_horizontal_margin</item>

    </style>
    <style name="sub_title_min" parent="Theme.BazAndroidCourse">
        <item name="android:textSize">@dimen/font_content_footer</item>
        <item name="marginHorizontal">@dimen/general_horizontal_margin</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="content_bold" parent="Theme.BazAndroidCourse">
        <item name="marginHorizontal">@dimen/general_horizontal_margin</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_subtilte_1</item>
    </style>

    <style name="content_regular" parent="Theme.BazAndroidCourse">
        <item name="android:textSize">@dimen/font_content</item>
        <item name="marginHorizontal">@dimen/general_horizontal_margin</item>
    </style>
    <style name="regular_text" parent="Theme.BazAndroidCourse">
        <item name="android:textSize">@dimen/font_content</item>
        <item name="marginHorizontal">@dimen/general_horizontal_margin</item>

    </style>

    <style name="upper_price" parent="content_bold">
        <item name="android:textColor">@color/green</item>
        <item name="android:gravity">end</item>
        <item name="marginHorizontal">@dimen/general_horizontal_margin</item>


    </style>

    <style name="lower_price" parent="content_bold">
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">end</item>
        <item name="marginHorizontal">@dimen/general_horizontal_margin</item>
    </style>

</resources>