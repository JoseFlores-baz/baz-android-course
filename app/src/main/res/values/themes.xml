<resources>
    <!-- Base application theme. -->
    <style name="Theme.BazAndroidCourse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#A1A0A0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="custom_card_view" parent="CardView">
        <item name="android:layout_marginTop">@dimen/general_vertical_margin_min</item>
        <item name="android:layout_marginBottom">@dimen/general_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/general_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/general_horizontal_margin</item>
        <item name="android:padding">5dp</item>
        <item name="cardCornerRadius">@dimen/general_corner_radius</item>
    </style>

